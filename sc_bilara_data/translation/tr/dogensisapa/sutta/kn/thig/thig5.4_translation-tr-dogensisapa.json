{
  "thig5.4:0.1": "Kıdemli Dervişelerin Şarkıları 5.4 ",
  "thig5.4:0.2": "Beşler Silsilesi ",
  "thig5.4:0.3": "Sundarīnandā'nın Şarkısı ",
  "thig5.4:1.1": "(Buda:) “Kirli, çürük ve de hasta ",
  "thig5.4:1.2": "Bak bu et yığını, Nanda; ",
  "thig5.4:1.3": "Cazip olmayana yoğunlaş ",
  "thig5.4:1.4": "Selim ve bütün aklınla. ",
  "thig5.4:2.1": "Bu nasılsa o da öyle; ",
  "thig5.4:2.2": "O nasılsa bu da böyle. ",
  "thig5.4:2.3": "Çürümüş leş gibi kokar, ",
  "thig5.4:2.4": "Zevk verir eblehlere. ",
  "thig5.4:3.1": "İşte böyle bakıp da ",
  "thig5.4:3.2": "Gece gündüz çalışan ",
  "thig5.4:3.3": "İrfanı sayesinde ",
  "thig5.4:3.4": "Gerçeği görecektir.” ",
  "thig5.4:4.1": "(Nandā:) “Meselenin özünü ",
  "thig5.4:4.2": "Ayık kafayla inceledim, ",
  "thig5.4:4.3": "Bu bedeni içten dışa ",
  "thig5.4:4.4": "Olduğu gibi gözledim. ",
  "thig5.4:5.1": "Böylece bedenden soğuyup ",
  "thig5.4:5.2": "İçimden arzuları söktüm; ",
  "thig5.4:5.3": "Ayık kafayla koptum; ",
  "thig5.4:5.4": "Sükûnetle söndüm.” ",
  "thig5.4:6.1": "… Kıdemli dervişe Sundarīnandā …. "
}