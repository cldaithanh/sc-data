{
  "thig7.1:0.1": "Kıdemli Dervişelerin Şarkıları 7.1 ",
  "thig7.1:0.2": "Yediler Silsilesi ",
  "thig7.1:0.3": "Uttarā'nın Şarkısı ",
  "thig7.1:1.1": "“Havanelleriyle delikanlılar ",
  "thig7.1:1.2": "Döver öğütür tahılları. ",
  "thig7.1:1.3": "Eşleriyle çocuklarını ",
  "thig7.1:1.4": "Geçindirip servet bulur. ",
  "thig7.1:2.1": "Tut dediğini Buda'nın, ",
  "thig7.1:2.2": "Sonra pişman olmayasın: ",
  "thig7.1:2.3": "Çabucak ayağını yıka, ",
  "thig7.1:2.4": "Hemen otur bir başına. ",
  "thig7.1:3.1": "Aklını yoğunlaştır ",
  "thig7.1:3.2": "Akl-ı selim bütünlüğüyle; ",
  "thig7.1:3.3": "Dön ve fiiliyatı incele- ",
  "thig7.1:3.4": "Yabancı onlar, öz değil.” ",
  "thig7.1:4.1": "Bu sözlerini dinleyip ",
  "thig7.1:4.2": "Paṭācārā'nın talimatına uydum; ",
  "thig7.1:4.3": "Hemen yıkayıp ayağımı ",
  "thig7.1:4.4": "Bir başıma oturdum. ",
  "thig7.1:5.1": "Gecenin ilk seyrinde ",
  "thig7.1:5.2": "Geçmiş yaşamlarımı hatırladım. ",
  "thig7.1:5.3": "Gecenin orta seyrinde ",
  "thig7.1:5.4": "İlâhî görüm temizlendi. ",
  "thig7.1:6.1": "Gecenin son seyrinde ",
  "thig7.1:6.2": "Kara kümeleri parçaladım. ",
  "thig7.1:6.3": "Üç bilgi ile ayağa kalktım, ",
  "thig7.1:6.4": "Talimatı tamamladım. ",
  "thig7.1:7.1": "Sana hürmet ederim ",
  "thig7.1:7.2": "Otuzlar'ın hürmet ettiği gibi ",
  "thig7.1:7.3": "Tıpkı, muzaffer Indra'ya; ",
  "thig7.1:7.4": "Üç bilginin üstadıyım, lekesiz. ",
  "thig7.1:8.1": "… Kıdemli dervişe Uttarā …. "
}