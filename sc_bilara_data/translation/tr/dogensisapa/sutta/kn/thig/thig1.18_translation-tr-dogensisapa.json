{
  "thig1.18:0.1": "Kıdemli Dervişelerin Şarkıları 1.18 ",
  "thig1.18:0.2": "Birler Silsilesi ",
  "thig1.18:0.3": "Saṅghā'nın Şarkısı ",
  "thig1.18:1.1": "Düştüm yola bırakıp evimi, ",
  "thig1.18:1.2": "İneği, oğlumu, sevdiğimi; ",
  "thig1.18:1.3": "Arzuyu ve öfkeyi bıraktım, ",
  "thig1.18:1.4": "Temizledim tümden cehaleti; ",
  "thig1.18:1.5": "Kökünü kuruttum tutkunun, ",
  "thig1.18:1.6": "Sükûnetle söndüm. ",
  "thig1.18:2.1": "… Kıdemli dervişe Saṅghā …. ",
  "thig1.18:3.1": "Birler silsilesi bitti. "
}